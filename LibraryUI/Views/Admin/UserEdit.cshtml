@model Library.API.Model.UserModel
@{
    ViewData["Title"] = "UserEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcı Bilgileri Düzenleme</h4>
            <br />
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName">Kullanıcı Ad Soyad</label>
                    <input type="text" asp-for="@Model.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputUserName">Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Mail Adresi</label>
                    <input type="text" asp-for="@Model.Email" class="form-control" />
                    <input asp-for="IdentityId" hidden/>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Kullanıcı Durumu</label>
                    @*<input type="text" asp-for="@Model.IsActive" class="form-control" />*@
                    <select class="form-control" asp-for="@Model.IsActive">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2" onclick="updateBook()">Güncelle</button>
            </form>
        </div>
    </div>
</div>
<script>
    function updateBook() {
        var form = document.getElementById("update-form");
        form.submit();

        Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: 'Kitap başarıyla güncellendi',
            showConfirmButton: false,
            timer: 1500
        })
    }
</script>