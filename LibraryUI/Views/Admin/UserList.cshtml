@using Entity.Concrete
@model List<User>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<body>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Kullanıclar Tablosu</h4>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Kullnıcı Adı</th>
                                <th>E postası</th>
                                <th>Kullanıcı Durumu</th>
                                <th>Sil</th>
                                <th>Rol Ata</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>
                                        @if (@item.IsActive == true)
                                        {
                                            <span>Aktif</span>

                                        }
                                        else
                                        {
                                            <span>Pasif</span>

                                        }
                                    </td>
                                    <td><a href="Admin/UserDelete" class="badge badge-danger">Sil</a></td>
                                    <td><a href="/Role/AddRoleToUser/@item.Id" class="badge badge-success">Role Ekle</a></td>
                                    <td><a href="/Admin/UserEdit/@item.Id" class="badge badge-info">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
