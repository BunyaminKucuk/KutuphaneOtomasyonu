@using Entity.Concrete
@model List<User>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    th {
        background-color: #f5f5f5;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    td {
        cursor: pointer;
    }

    .badge {
        cursor: pointer;
    }

    .badge-danger {
        background-color: #dc3545;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-info {
        background-color: #17a2b8;
    }

    .badge i {
        margin-right: 5px;
    }
</style>
@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-warning">
        Henüz herhangi bir kullanıcı eklenmemiş.
    </div>
    @*<button type="button" class="btn btn-primary">Kullanıcı Ekle</button>*@
}
else
{
    <body>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kullanıcılar Tablosu</h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Adı</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>E postası</th>
                                        <th>Kullanıcı Durumu</th>
                                        <th>Sil</th>
                                        <th>Rol Ata</th>
                                        <th>Düzenle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr style="background-color: @(item.Id % 2 == 0 ? "#f9f9f9" : "#fff"); cursor: pointer;">
                                            <td>@item.Name</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td>
                                                @if (@item.IsActive == true)
                                                {
                                                    <span style="color: green;">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span style="color: red;">Pasif</span>
                                                }
                                            </td>
                                            <td><a onclick="deleteUser(@item.Id)" class="badge badge-danger">Sil</a></td>
                                            <td><a href="/Role/AddRoleToUser/@item.Id" class="badge badge-success">Role Ekle</a></td>
                                            <td><a href="/Admin/UserEdit/@item.Id" class="badge badge-info">Düzenle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}

<script>
    function deleteUser(id) {
        swal({
            title: "Emin Misin?",
            text: "Bu kitabı silmek istiyor musunuz?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        }).then((willDelete) => {
            if (willDelete) {
                var form = document.createElement("form");
                form.method = "POST";
                form.action = "/Admin/UserDelete/" + id;

                var hiddenField = document.createElement("input");
                hiddenField.type = "hidden";
                hiddenField.name = "id";
                hiddenField.value = id;

                form.appendChild(hiddenField);
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>
