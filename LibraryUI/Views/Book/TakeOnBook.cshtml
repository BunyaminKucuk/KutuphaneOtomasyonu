@model Library.API.Model.TakeOnBookModel
@{
    ViewData["Title"] = "TakeOnBook";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body table-responsive">
                <h4 class="card-title">Kullanıcıya Kitap Verme</h4>
                <br />
                <div class="forms-sample">
                    <div class="form-group">
                        @*<label for="exampleInputName1">Kullanıcı Adı </label>*@
                        @Html.HiddenFor(x => x.BookId, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Kulanıcı Adı </label>
                        @Html.DropDownListFor(x => x.UserId, new SelectList(Model.Users, "Id", "UserName"), "Seçiniz", new { @class = "form-control" })
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
            </div>
        </div>
    </div>
</form>