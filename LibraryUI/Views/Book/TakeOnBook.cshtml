@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Library.API.Model.TakeOnBookModel
@{
    ViewData["Title"] = "TakeOnBook";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Kitap  ID</label>
                        <input type="text" class="form-control" asp-for="@Model.BookId" id="" aria-describedby="emailHelp" placeholder="Kitap Id" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Kullanıcı Id</label>
                        <input type="text" class="form-control" asp-for="@Model.UserId" id="" placeholder="Kullanıcı Id" required="">
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kitabı Al</button>
                </form>
            </div>
        </div>
    </div>
</section>
