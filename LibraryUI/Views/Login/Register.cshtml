@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Library.API.Model.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/Tema/prupleadmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/Tema/prupleadmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="/Tema/prupleadmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/Tema/prupleadmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="/Tema/prupleadmin/assets/images/logo.svg">
                            </div>
                            <h4>Yeeni biri?</h4>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="@Model.UserName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Kullanıcı Adı">
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="@Model.Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="E posta">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="@Model.Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre">
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten bir hesabınız var mı? <a href="/Login/Index" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/Tema/prupleadmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/Tema/prupleadmin/assets/js/off-canvas.js"></script>
    <script src="/Tema/prupleadmin/assets/js/hoverable-collapse.js"></script>
    <script src="/Tema/prupleadmin/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>