@using Entity.Identity
@model List<ApplicationRole>

@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Roller Tablosu</h4>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th><strong>Rol Adı</strong></th>
                                <th><strong>Oluşturulma Tarihi</strong></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@((@item.CreatedTime.DayOfYear % 2 == 0) ? "table-primary" : "table-secondary")">
                                    <td>@item.Name</td>
                                    <td>@(((DateTime)item.CreatedTime).ToString("dd.MM.yyyy"))</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <br />
                        <a href="/Role/AddRole" class="btn btn-primary">Yeni Rol Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
