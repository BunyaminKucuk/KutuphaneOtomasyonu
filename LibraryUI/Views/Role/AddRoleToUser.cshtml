@model Library.API.Model.AddRoleToUserModel

@{
    ViewData["Title"] = "AddRoleToUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kullanıcya Rol Ekle</h4>
                <br />
                <div class="forms-sample">
                    <div class="form-group">
                        @*<label for="exampleInputName1">Kullanıcı Adı </label>*@
                        @Html.HiddenFor(x => x.User.Id, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Rol Adı </label>
                        @Html.DropDownListFor(x => x.Role.Id, (SelectList)ViewBag.cv, "Seçiniz", new { @class = "form-control" })
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
            </div>
        </div>
    </div>
</form>